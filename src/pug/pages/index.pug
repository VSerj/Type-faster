extend ../layout/base.pug
block content
  header.header
    h1.title.thin
      | Type faster
    .statistics
      .statistics__text
        | Stats
      a.statistics__btn.btn-floating
        i.material-icons insert_chart

  main.main.container
    .radio-buttons
      - var timeArr = ["10", "30", "60"]
      each time, ind in timeArr
        +input-radio-time(
          { name: 'time', time: time, checked: !ind }
        )

    .api-text-field.z-depth-1
      .api-text-field__overlay
        | API text

    textarea.materialize-textarea(placeholder="Type here...")

    .control
      .indicator
        .indicator__text
          | : )
        .indicator-battery
      .buttons
        button.btn.buttons__start
          | Start
        button.btn.buttons__stop.disabled
          | Stop
      .timer
        span.timer__number 55
        span s
